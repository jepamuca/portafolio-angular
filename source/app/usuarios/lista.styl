.title
	border-top-left-radius 15px
	border-top-right-radius 15px
	text-align center
	background blue
	font-weigth bolder
	margin 0
	display inline-block
	width 60%
	weigth 90%
	padding-bottom 1em
	padding-top 1em
	font-size 30px
	font-family 'Handlee'
.campos
	background #1E90FF
	display inline-block
	width 60%
	border 2px black solid
	border-collapse collapse
	font-family 'Handlee'
.box
	display inline-block
	margin-right 90px
	border-collapse collapse
	padding-bottom .9em
	padding-top .9em
.Tabla
	text-align center
	margin-top 4em
.Tabla2
	margin-left 20%
	width 100%
.inserts 
	text-align center
	width 60%
	background #ADD8E6
	border-collapse collapse
	font-family 'Handlee'
	border-top 2px black solid
.Insert-campo
	width 0%
	border-right 2px black solid
	border-bottom 2px black solid
	border-left 2px black solid
	padding-bottom .3em
	padding-top .3em
@media (max-width 715px)
	.box
		margin-right 10px
@media (min-width 715px) and (max-width 820px)
	.box
		margin-right 18px
@media (min-width 820px) and (max-width 900px)
	.box
		margin-right 30px
@media (min-width 900px) and (max-width 1000px)
	.box
		margin-right 40px
@media (min-width 1000px) and (max-width 1099px)
	.box
		margin-right 56px
@media (min-width 1100px) and (max-width 1200px)
	.box
		margin-right 65px
@media (min-width 1200px) and (max-width 1249px)
	.box
		margin-right 76px
@media (min-width 600px) and (max-width 645px)
	.box
		margin-right 15px
		font-size 13px
	.inserts
		font-size 12px
@media (min-width 530px) and (max-width 600px)
	.box
		margin-right 10px
		font-size 12px
	.inserts
		font-size 12px
@media (min-width 463px) and (max-width 530px)
	.box
		margin-right 2px
		font-size 12px
	.inserts
		font-size 12px		
